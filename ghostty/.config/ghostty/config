# zellij

# command = exec zellij


# Appearance

theme = Spacedust
font-size = 18
font-family = DankMono Nerd Font
window-decoration = false
gtk-tabs-location = bottom


# binds

keybind = alt+a>c=new_tab
keybind = alt+a>v=new_split:right
keybind = alt+a>-=new_split:down
keybind = alt+a>x=close_window
keybind = alt+a>l=goto_split:left
keybind = alt+a>h=goto_split:right
keybind = alt+a>k=goto_split:top
keybind = alt+a>j=goto_split:bottom


keybind = alt+a>i=inspector:toggle
